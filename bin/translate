namespace Vinhson\Search;

use Vinhson\Search\SingleCommands\TranslateCommand;

require __DIR__ . '/../vendor/autoload.php';

$app = new \Symfony\Component\Console\Application('translate', 'v1.0.0');

$translate = new TranslateCommand();

$app->add($translate);

$app->setDefaultCommand($translate->getName(), true);
$app->run();
