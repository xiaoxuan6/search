namespace Vinhson\Search;

use Vinhson\Search\SingleCommands\QrcodeCommand;

$autoloads = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
];
foreach ($autoloads as $autoload) {
    if (file_exists($autoload)) {
        require_once $autoload;
    }
}

$app = new \Symfony\Component\Console\Application('qrcode', 'v1.0.0');

$qrcode = new QrcodeCommand();

$app->add($qrcode);

$app->setDefaultCommand($qrcode->getName(), true);
$app->run();
